    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "file://C:/ClaphamSite/index.html",
            "webRoot": "${workspaceFolder}"
        },
        // created by VS Code
        {
        "type": "firefox",
        "request": "launch",
        "name": "Launch localhost against Firefox",
        "url": "file://C:/ClaphamSite/index.html",
        "webRoot": "${workspaceFolder}"
        }
    ]
}